{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@loopback/build/config/tsconfig.common.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "CommonJS",
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.d.ts",
    ".eslintrc.js"
  ]
}
